{
  "name": "pwncheck",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI tool that checks passwords against the Have I Been Pwned API with intelligent caching.",
  "main": "pwncheck.js",
  "bin": {
    "pwncheck": "./pwncheck.js"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "audit": "npm audit",
    "test": "npm run lint && npm run format"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "password",
    "security",
    "pwned",
    "haveibeenpwned",
    "cli",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "gitleaks-secret-scanner": "^1.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
